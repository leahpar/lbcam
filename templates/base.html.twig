<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">

        <title>LBCAM !</title>

        <!-- PWA -->
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="theme-color" content="#14b8a6">
        <script src="{{ asset('js/pwa.js') }}"></script>
        <link rel="icon" type="image/png" href="{{ asset('img/icon-512.png') }}"> {# => https://maskable.app #}


        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.2.3/dist/css/tom-select.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/dropzone@5.9.3/dist/min/dropzone.min.css">

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>

        <header>

            {% if app.user %}

                {# Recherche (nom, tag) #}
                <form method="get" action="{{ path('trucs_list') }}">
                    <input type="search" name="search" placeholder="Rechercher un truc">
                </form>

                {# Menu #}
                <nav>
                    <ul>
                        <li><a href="{{ path('trucs_list') }}">Accueil</a></li>
                        <li><a href="{{ path('trucs_add') }}">Proposer un trucs</a></li>
                        <li><a href="{{ path('trucs_list', {me: true}) }}">Mes trucs</a></li>
                        <li><a href="{{ path('app_logout') }}">Me d√©connecter</a></li>
                    </ul>
                </nav>

            {% endif %}

            {# Messages flash #}
            <div id="flashContainer">
                {# label : 'notice', 'success', 'warning', 'error' #}
                {% set class = {'notice':'bg-navy','success':'bg-aqua','warning':'bg-or','error':'bg-red'} %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flashMessage text-white font-bold p-3 text-center {{ class[label] }}">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

        </header>


        {% block body %}{% endblock %}

        {# JS #}
        <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.3/dist/js/tom-select.complete.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/dropzone@5.9.3/dist/min/dropzone.min.js"></script>
        {% block javascripts %}{% endblock %}

    </body>
</html>
